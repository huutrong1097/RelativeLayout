<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/blue"
        android:layout_centerInParent="true"
        android:background="#3F51B5"
        android:textSize="50sp"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/green"
        android:layout_alignLeft="@id/blue"
        android:layout_above="@id/blue"
        android:background="#4CAF50"
        android:textSize="50sp"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/green"
        android:layout_above="@id/green"
        android:background="#F44336"
        android:textSize="50sp"
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/orange"
        android:layout_alignLeft="@id/blue"
        android:layout_below="@id/blue"
        android:background="#FF9800"
        android:textSize="50sp"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/gray"
        android:layout_alignLeft="@id/orange"
        android:layout_below="@id/orange"
        android:background="#BBB2A5"
        android:textSize="50sp"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/gray"
        android:layout_below="@id/gray"
        android:background="#E91E63"
        android:textSize="50sp"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
